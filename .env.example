# API Keys and Secrets - FreeTO Kids Events
# Copy this file to .env and add your actual API key
# NEVER commit the .env file to version control!

# Google Maps API Key
# Used for: Distance Matrix API (calculating distances between locations)
# Get your key at: https://console.cloud.google.com/apis/credentials
# Required APIs: Distance Matrix API
GOOGLE_MAPS_API_KEY=your_api_key_here

# EventBrite API Token (optional - used by scrapers)
# Only needed if you're scraping EventBrite events
# Get your token at: https://www.eventbrite.com/platform/api-keys
EVENTBRITE_TOKEN=your_token_here

# CORS Configuration
# Set to your actual domain, or * for all (not recommended for production)
# Examples: https://joshuaopolko.com, https://freeto.ca
ALLOWED_ORIGIN=https://yourdomain.com

# Referer Validation (Extra Protection)
# Only allow requests from this domain
ALLOWED_REFERER=https://yourdomain.com
# Require referer header (true/false) - set to true for strict security
REQUIRE_REFERER=false

# Rate Limiting
# Maximum requests per IP per hour
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_HOURS=1

# Application Environment
# Options: development, production
# In development mode, detailed error messages are shown
APP_ENV=production
